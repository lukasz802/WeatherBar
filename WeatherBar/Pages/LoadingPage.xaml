<Page x:Class="WeatherBar.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeatherBar.Pages"
      xmlns:f="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d"
      SnapsToDevicePixels="True"
      FontFamily="/AppResources;Component/Fonts/#Roboto Condensed Light"
      d:DesignHeight="450" d:DesignWidth="450">
    <Grid Background="{StaticResource LoadingBackgroundColorBrush}">
        <f:ImageAwesome Icon="CircleOutlineNotch" Spin="True" SpinDuration="1"
                        Width="40" Foreground="White"/>
    </Grid>
</Page>
